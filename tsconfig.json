{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"declaration": true,
		"declarationMap": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"dom",
			"es7",
			"es2017"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noErrorTruncation": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"rootDir": "./",
		"rootDirs": [ "./", "src" ],
		"sourceMap": true,
		"strictNullChecks": false,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es5"
	},
	"exclude": [
		"dist/",
		"node_modules",
		"test/"
	]
}
